{
  "extends": ["../tsconfig.json"],
  "compilerOptions": {
    "resolvePackageJsonExports": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.jsx", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
